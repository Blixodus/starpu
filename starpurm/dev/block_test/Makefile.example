CFLAGS=-Wall -g

CFLAGS+=$(shell pkg-config --cflags starpurm-1.3)
LDFLAGS+=$(shell pkg-config --libs-only-L starpurm-1.3)
LDLIBS += $(shell pkg-config --libs-only-l starpurm-1.3)

.phony: all clean
all: block_test
%: %.c

block_test: block_test.o
	$(CC) $(LDFLAGS) -o $@ $^ $(LDLIBS)
%.o: %.c
	$(CC) $(CPPFLAGS) $(CFLAGS) -c -o $@ $<

clean:
	rm -fv block_test *.o
