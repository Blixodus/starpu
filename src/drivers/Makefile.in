.PHONY: core cuda gordon

DRIVERS=

ifeq (@USE_CPU@,yes)
	DRIVERS+= core
endif

ifeq (@USE_CUDA@,yes)
	DRIVERS+= cuda
endif

ifeq (@USE_GORDON@,yes)
	DRIVERS += gordon
endif

all: $(DRIVERS)

core:
	@make -C core

cuda:
	@make -C cuda

gordon:
	@make -C gordon

clean:
	@make -C core clean
	@make -C cuda clean
	@make -C gordon clean
