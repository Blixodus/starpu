.PHONY: incrementer tag_example cuda heat mult spmv cholesky strassen pastix-wrappers  strassen2

TARGET=tag_example 
TARGET+= incrementer
#TARGET+= dw_sparse_cg

STARPU= $(PWD)/../libstarpu.a

EXTRADEP=

ifeq ($(CHECK), 1)
	CFLAGS += -DCHECK_OUTPUT
	CFLAGS += -DCHECK_RESULTS
endif

ifeq (@BLAS_LIB@,goto)
	TARGET += mult
	TARGET+= cholesky
	TARGET+= heat 
	TARGET+= strassen2
endif

ifeq (@BLAS_LIB@,system)
	TARGET += mult
	TARGET+= cholesky
	TARGET+= heat 
	TARGET+= strassen2
endif

ifeq (@BLAS_LIB@,atlas)
	TARGET += mult
	TARGET+= spmv
	TARGET+= heat 
	TARGET+= cholesky
	TARGET+= strassen
	TARGET+= strassen2
ifeq (@USE_CUDA@,yes)
	TARGET+= pastix-wrappers
endif
endif

CFLAGS += -I../

ifeq (@USE_FXT@,yes)
	LDFLAGS += -lfxt
endif

all: $(TARGET)

pastix-wrappers:
	make -C pastix-wrappers

strassen:
	make -C strassen

strassen2:
	make -C strassen2

incrementer:
	make -C incrementer

tag_example:
	make -C tag_example

cuda:
	make -C cuda

heat:
	make -C heat

mult:
	make -C mult

spmv:
	make -C spmv

cholesky:
	make -C cholesky

clean:
	@make -C pastix-wrappers clean
	@make -C cuda clean
	@make -C heat clean
	@make -C incrementer clean
	@make -C mult clean
	@make -C spmv clean
	@make -C cholesky clean
	@make -C strassen2 clean
	@make -C strassen clean
	@make -C tag_example clean
	@rm -f *.o *.d *.gcno *.gcda
