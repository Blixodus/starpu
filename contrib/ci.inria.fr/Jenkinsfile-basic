#!groovy

pipeline
{
	agent none

	stages
	{
		stage('Tarball')
		{
			steps
			{
				node('autotools')
				{
					checkout scm
					sh 'contrib/ci.inria.fr/job-0-tarball.sh'
					script
					{
					       env.tarballgz = sh (script: 'ls *.tar.gz', returnStdout: true).trim()
					}
					stash includes: "${env.tarballgz}", name: 'tarballgz'
					archiveArtifacts artifacts: "${env.tarballgz},doc/doxygen/starpu.pdf", fingerprint: true, onlyIfSuccessful: true
				}
			}
		}
	}
}
